<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Envoyer une invitation"
        android:background="#002030"
        android:textColor="#fff" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#fff"
            android:orientation="vertical" >
  <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
  <Spinner 
      android:id="@+id/sp_existing_visitor"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:entries="@array/choicevisitor"/>
  
     <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" >
            
				<TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                       android:id="@+id/et_search_visitor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:clickable="false" 
                        android:cursorVisible="false" 
                        android:focusable="false" 
                        android:focusableInTouchMode="false"
                        android:hint="Rechercher par nom/prénom"
                        android:inputType="date" />

                    <Button
                        android:id="@+id/bt_searchvisitor"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="setHeureDebut"
                        android:background="@drawable/ic_menu_clock" />
                </TableRow>
            </TableLayout>

           							
            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nom *"
                android:textSize="14dp"
                android:textStyle="italic" />
            <EditText
                android:id="@+id/et_lastname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="Nom de l'invité"
                android:inputType="text" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Prénom *"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="Prénom de l'invité"
                android:inputType="text" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="# CIN"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/et_cin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="00-00-00-0000-00-00000"
                android:inputType="text"
                android:maxLength="22" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Licence de véhicule"
                android:visibility="gone"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:visibility="gone"
                android:hint="Votre Numéro de licence"
                android:inputType="text" />

            <View
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Numéro de passeport"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                 android:id="@+id/et_passport"
                 android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="Numéro de passeport"
                android:inputType="text" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
             <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Numéro de passeport"
                android:textSize="14dp"
                android:textStyle="italic" />
            <Spinner
                 android:id="@+id/sp_sexe"
                 android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                  android:entries="@array/sexe" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Téléphone *"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                 android:id="@+id/et_phone"
               android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="(509)00000000"
                android:inputType="phone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
               android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                 android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:hint="Email de l'invité"
                android:inputType="text" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Détails du véhicule"
                android:visibility="gone"
                android:textSize="14dp"
                android:textStyle="italic" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/edit_text"
                android:visibility="gone"
                 android:hint="Détail du véhicule"
                android:inputType="textMultiLine" />

            <View
                android:layout_width="fill_parent"
                 android:visibility="gone"
                 android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Département"
                 android:visibility="gone"
                 android:textSize="14dp"
                android:textStyle="italic" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:visibility="gone"
                 android:entries="@array/departement" />

            <View
                android:layout_width="fill_parent"
                 android:visibility="gone"
                 android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:visibility="gone"
                 android:text="Hote"
                android:textSize="14dp"
                android:textStyle="italic" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                 android:visibility="gone"
                 android:entries="@array/hote" />

            <View
                android:layout_width="fill_parent"
                 android:visibility="gone"
                 android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="14dp"
                android:textStyle="italic" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/et_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:clickable="false" 
                        android:cursorVisible="false" 
                        android:focusable="false" 
                        android:focusableInTouchMode="false"
                        android:hint="Date"
                        android:inputType="date" />

                    <Button
                        android:id="@+id/bt_setdate"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="setDate"
                        android:background="@android:drawable/ic_menu_my_calendar" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Heure de début"
                android:textSize="14dp"
                android:textStyle="italic" />
               <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" >
            
<TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/et_hd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:clickable="false" 
                        android:cursorVisible="false" 
                        android:focusable="false" 
                        android:focusableInTouchMode="false"
                        android:hint="Heure début"
                        android:inputType="date" />

                    <Button
                        android:id="@+id/bt_setHeureDebut"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:onClick="setHeureDebut"
                        android:background="@drawable/ic_menu_clock" />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Heure de fin"
                android:textSize="14dp"
                android:textStyle="italic" />
   <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0" >
            
          <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/et_hf"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/edit_text"
                        android:clickable="false" 
                        android:cursorVisible="false" 
                        android:focusable="false" 
                        android:focusableInTouchMode="false"
                        android:hint="Heure fin"
                        android:inputType="date" />

                    <Button
                        android:id="@+id/bt_setHeureFin"
                        android:layout_width="50dp"
                        android:onClick="setHeureFin"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_menu_clock"/>"
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />

            <RelativeLayout
                 android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Personnes qui m&apos;accompagnent"
                    android:textSize="14dp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/bt_addperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Ajouter"
                    android:drawableLeft="@android:drawable/ic_menu_add" />
            </RelativeLayout>

            <View
                 android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#002030" />

            <ListView
                 android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:entries="@array/contacts"
                android:scrollbars="none" >
            </ListView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
            <Button
                        android:id="@+id/bt_send"
                        android:layout_gravity="center"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:textColor="#fff" 
                        android:layout_height="wrap_content"
                        android:background="#002030" 
                        android:text="Envoyer l'invitation"
                        android:drawableLeft="@drawable/ic_menu_send"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>