<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	 <item android:state_pressed="true" >
	     <shape android:shape="rectangle"  >
	         <corners android:radius="9dip" />
	         <stroke android:width="1dip" android:color="#000" />
	         <gradient android:angle="-90" android:startColor="@color/ThemeColor" android:endColor="@color/ThemeColor"  />            
	     </shape>
	 </item>
	<item android:state_focused="true">
	     <shape android:shape="rectangle"  >
	         <corners android:radius="9dip" />
	         <stroke android:width="1dip" android:color="@color/ThemeColor" />
	         <solid android:color="@color/ThemeColor"/>       
	     </shape>
	 </item>  
	<item>
	    <shape android:shape="rectangle">
	         <corners android:radius="9dip" />
	         <stroke android:width="1dip" android:color="@color/ThemeColor" />
	         <gradient android:angle="-90" android:startColor="@color/Goldenrod" android:endColor="#FFaa55" />
	     </shape>
	 </item>
</selector>