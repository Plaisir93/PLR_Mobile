<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">


<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:text="Coordonnées/Adresse du patient"
            android:background="@color/Goldenrod"/>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="1">

            <TableRow
                android:id="@+id/tr_telephone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Téléphone"/>
                <EditText
                    android:id="@+id/et_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/edit_text"
                    android:maxLength="20"
                    android:hint=""
                    android:inputType="text" />
            </TableRow>
            <TableRow
                android:id="@+id/tr_adressedomiciliaire"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Adresse"/>
                <EditText
                    android:id="@+id/et_adressedomiciliaire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/edit_text"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:minLines="2"
                    android:maxEms="5"
                    android:gravity="top|left"
                    android:maxLength="250"
                    android:hint="" />
            </TableRow>
            <TableRow
                android:id="@+id/tr_personnecontact"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Personne de contact"/>
                <EditText
                    android:id="@+id/et_personnecontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:maxLength="100"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint=""
                    android:inputType="text" />
            </TableRow>

            <TableRow
                android:id="@+id/tr_adressepersonnecontact"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Adresse du contact"/>
                <EditText
                    android:id="@+id/et_adressepersonnecontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:maxLength="250"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint=""
                    android:inputType="text" />
            </TableRow>
            <TableRow
                android:id="@+id/tr_telephonepersonnecontact"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Téléphone du contact"/>
                <EditText
                    android:id="@+id/et_telephonepersonnecontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:maxLength="20"
                    android:hint=""
                    android:inputType="text" />
            </TableRow>


        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18dp"
            android:textColor="@color/White"
            android:text="Confirmation"
            android:background="@color/Goldenrod"/>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="1">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"

                    android:text="Institution"/>
                <TextView
                    android:id="@+id/tv_institution"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=""/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Visite effectuée le "/>
                <TextView
                    android:id="@+id/tv_datevisite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=""/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Visite effectuée par "/>
                <TextView
                    android:id="@+id/tv_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text=""/>
            </TableRow>

        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:stretchColumns="*">
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/bt_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/cancel_button"
                    android:drawableLeft="@drawable/ic_menu_close_clear_cancel"
                    android:text="Annuler"
                    android:textColor="#ff0000"
                    android:textSize="12dp" />
                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:drawableLeft="@drawable/ic_checkmark_holo_light"
                    android:background="@drawable/custom_button"
                    android:text="Enregistrer"
                    android:textColor="#fff"
                    android:textSize="12dp" />
            </TableRow>

        </TableLayout>



    </LinearLayout>
</ScrollView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dip"
    android:layout_weight="1"
    android:gravity="bottom"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/Brown"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="italic"
            android:text="Powered by SOLUTIONS S.A" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>

